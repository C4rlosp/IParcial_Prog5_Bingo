@model Parcial1.Models.ConfiguracionMetodoPago

@{
    ViewData["Title"] = "Create";
}

<h1>Crear </h1>

<h4>Configuracion del Metodo de Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdMetodoPago" class="control-label"></label>
                <select asp-for="IdMetodoPago" class ="form-control" asp-items="ViewBag.IdMetodoPago"></select>
            </div>
            <div class="form-group">
                <label asp-for="ComisionAplicada" class="control-label"></label>
                <input asp-for="ComisionAplicada" class="form-control" />
                <span asp-validation-for="ComisionAplicada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatosRequeridos" class="control-label"></label>
                <input asp-for="DatosRequeridos" class="form-control" />
                <span asp-validation-for="DatosRequeridos" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Regresar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
