@model Parcial1.Models.Resultado

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Resultado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdResultado" />
            <div class="form-group">
                <label asp-for="IdJuego" class="control-label"></label>
                <select asp-for="IdJuego" class="form-control" asp-items="ViewBag.IdJuego"></select>
                <span asp-validation-for="IdJuego" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BolaExtraida" class="control-label"></label>
                <input asp-for="BolaExtraida" class="form-control" />
                <span asp-validation-for="BolaExtraida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaHoraExtraccion" class="control-label"></label>
                <input asp-for="FechaHoraExtraccion" class="form-control" />
                <span asp-validation-for="FechaHoraExtraccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCartonGanador" class="control-label"></label>
                <select asp-for="IdCartonGanador" class="form-control" asp-items="ViewBag.IdCartonGanador"></select>
                <span asp-validation-for="IdCartonGanador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCreacion" class="control-label"></label>
                <input asp-for="FechaCreacion" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaModificacion" class="control-label"></label>
                <input asp-for="FechaModificacion" class="form-control" />
                <span asp-validation-for="FechaModificacion" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />

                <a asp-action="Index" class="btn btn-secondary">Regresar</a>

            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
